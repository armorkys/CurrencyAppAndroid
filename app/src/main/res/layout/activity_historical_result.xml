<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtCurrencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="USD"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCurrencyDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCurrencyName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="2019/01/01 - 2020/01/01"
        android:textSize="18sp" />




        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_below="@+id/txtCurrencyDates"
            android:layout_marginTop="30dp"/>




    <RelativeLayout
        android:id="@+id/layoutRelativeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />




    </RelativeLayout>

</RelativeLayout>